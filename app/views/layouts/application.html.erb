<!DOCTYPE html>
<html>
<head>
  <title>CycleSmart</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:created] %>
  <div class="created"><%= flash[:created] %></div>
<% elsif flash[:create_error] %>
  <div class="create_error"><%= flash[:create_error] %></div>
<% elsif flash[:update] %>
  <div class="update"><%= flash[:update] %></div>
<% end %>
<%= yield %>

</body>
</html>

