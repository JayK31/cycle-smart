<body>
  <div id="user-wrapper">
    <%= link_to "Home", root_path, class: "links" %>
    <%= link_to "Edit Your Account", edit_user_path(@user), class: "links" %>
    <%= link_to "Delete Your Account", user_path(@user), method: :delete, class: "links" %>

    <div id = "directions-button">
    </div>

    <form id = "form-directions">
      Origin: <input id="directions-origin" type="text" name="fname" placeholder="Enter Origin"><br>
      Destination: <input id="directions-destination" type="text" name="destination" placeholder = "Enter Destination"><br>
      <input id= "directions-trigger" type="submit" value="Submit" placeholder="Enter Destination">
    </form>

    <div id= "create-route-button">
    </div>

      <%= form_for [@user, @route], :url => user_routes_path(@user), :html => {:id => "form-route"} do |f| %>
        <%= f.label :start_point %>
        <%= f.text_field :start_point %>
        <%= f.label :end_point %>
        <%= f.text_field :end_point %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.submit %>
      <% end %>

    <h1>Hi <%= @user.name %></h1>
    <center><button id="citibike">CitiBike Stations</button></center><br>

    <center><button id="bikeshops">Bike Shops</button></center><br>

    <center><button id="accidents">Accidents</button></center><br>


      <div id="map-canvas">
      </div>

    <!-- hidden field to retrieve user ID in routes.js AJAX request -->
    <input type="hidden" value="<%= @user.id %>" id="user-id"></input>

    <br/>
    <div id="routes">

      <h2 id="routestext"><center> My Routes </center></h2>
      <%= link_to "See My Routes", user_routes_path(@user) %><br/>
      <div id="route-list">
      </div>
    </div>
    <div id = "directions">
      <h2 id="directionstext"><center> Directions </center></h2>
    </div>
      <div class="footer_user">
        <br>
            <p class="footertext">Â© 2014 CycleSmart, Inc., All Rights Reserved
                CycleSmart and the WDI Project are registered trademarks of WDI Media, Inc.</p>
          </div>
  </div>

</body>


