<body id="user-wrapper">
  <!-- <div id="user-wrapper"> -->
    <%= link_to "Home", root_path, class: "links" %>
    <%= link_to "Edit Your Account", edit_user_path(@user), class: "links" %>
    <%= link_to "Delete Your Account", user_path(@user), method: :delete, class: "links" %>


    <div id= "create-route-button">
    </div>

        <center><h1 id="hi">Hi <%= @user.name %></h1></center>
        <br>

    <form action="">
      <center><input type="checkbox" id="citibike" name="citibike" value="citibike" /><span id="citibike">Citi Bike</span></center>

      <center><input type="checkbox" id="bikeshops" name="bikeshops" value="bikeshops" /><span id="bikeshops">Bike Shops</span></center>
      <center><input type="checkbox" id="accidents" name="accidents" value="accidents" /><span id="accidents">Accidents</span></center><br/>
    </div>
    </form>

      <%= form_for [@user, @route], :url => user_routes_path(@user), :html => {:id => "form-route"} do |f| %>
        <%= f.text_field :start_point, :placeholder => "Enter Start Here" %>
        <%= f.text_field :end_point, :placeholder => "Enter End Here" %>
        <%= f.submit 'Create Route', :id => 'route-trigger'%>
      <% end %>



      <div id="map-canvas">
      </div>

    <!-- hidden field to retrieve user ID in routes.js AJAX request -->
    <input type="hidden" value="<%= @user.id %>" id="user-id"></input>

    <br/>
    <div id="routes">

      <h2 id="routestext"><center> My Routes </center></h2>

        <ul id="route-list">
        </ul>

    </div>
     <div id = "directions-button">
    </div>
      <form id = "form-directions">
      <input id="directions-origin" type="text" name="fname" placeholder="Enter Origin">
        <input id="directions-destination" type="text" name="destination" placeholder = "Enter Destination">
      <input id= "directions-trigger" type="submit" value="Submit" placeholder="Enter Destination">
    </form>
    <div id = "directions">
      <h2 id="directionstext"><center> Directions </center></h2>
    </div>
